<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements">
    <ui:VisualElement name="row" class="row" style="flex-direction: row;">
        <Style src="PlayerListItem.uss" />
        <ui:VisualElement name="icon" class="icon" />
        <ui:VisualElement name="body" style="flex-grow: 1;">
            <ui:Label text="Label" name="player-name" class="player-name" />
            <ui:VisualElement name="details-row" style="flex-direction: row; justify-content: space-between;">
                <ui:Label text="SCORE: 9000" name="score" class="details-text" />
                <ui:VisualElement name="kills-box" style="flex-direction: row; -unity-background-scale-mode: scale-to-fit; align-items: center;">
                    <ui:VisualElement name="kills-icon" style="height: 15px; width: 15px; background-image: url('/Assets/DemoUI/Images/Kills_icon.png');" />
                    <ui:Label text="10/10" name="kills" class="details-text" />
                </ui:VisualElement>
            </ui:VisualElement>
            <ui:VisualElement style="flex-direction: row;">
                <ui:Label text="HP:" class="details-text" />
                <ui:VisualElement name="health-bar" class="health-bar">
                    <ui:VisualElement name="health-bar-fill" class="health-bar-fill" style="flex-grow: 1; width: 87px;" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
